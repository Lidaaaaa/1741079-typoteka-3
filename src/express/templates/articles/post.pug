extends ../layout.pug

block content
  main
    section
      .popup.popup--new-publication.popup--anti
        .new-publication
          form(action=endpoint method=(article ? `put`: `post`))
            .new-publication__header
              h1 #{article ? `Редактирование публикации` : `Новая публикация`}
              .new-publication__date-form
                h3 Дата публикации
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for='new-publication-date' aria-label='Календарь')
                    input#new-publication-date(type='text' name='date' placeholder=today value=(article ? article.createdDate: ``))
              button.new-publication__button.button.button--colored(type='submit') #{article ? 'Сохранить' : 'Опубликовать'}
            a.popup__button.button.button--popup-close(aria-label='Закрыть окно' href='..')
              | Закрыть
              | окно
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text' name='title' placeholder='Заголовок' required=true value=(article ? article.title : ``))
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type='text' name='photo' placeholder='Фотография' readonly='')
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file' name='upload')
                      | Обзор
                .new-publication__category-wrapper
                  each category, index in categories
                    .new-publication__checkbox.new-publication__checkbox--auto
                      input(type='checkbox' name="categories" id=`checkbox-${index}` value=category checked=(article && article.categories.includes(category)))
                      label(for=`checkbox-${index}`) #{category}
                  a.new-publication__form-link.button.button--transparent(href='/categories') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5' name='announce' placeholder='Анонс публикации')=(article ? article.announce : '')
                .form__field.form__field--publication-text
                  label
                    textarea(rows='10' name='full-text' placeholder='Полный текст публикации')=(article ? article.fullText : '')
